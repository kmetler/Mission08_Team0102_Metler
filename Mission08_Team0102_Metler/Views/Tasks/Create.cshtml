@model Mission08_Team0102_Metler.Models.Task
@{
    ViewData["Title"] = "Create Task";
}

<h2>Create Task</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label for="TaskName" class="form-label">Task</label>
        <input asp-for="TaskName" class="form-control" required />
    </div>
    <div class="col-md-6">
        <label for="DueDate" class="form-label">Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>
    <div class="col-md-6">
        <label for="Quadrant" class="form-label">Quadrant</label>
        <select asp-for="Quadrant" class="form-select" required>
            <option value="1">Quadrant 1 - Urgent & Important</option>
            <option value="2">Quadrant 2 - Not Urgent & Important</option>
            <option value="3">Quadrant 3 - Urgent & Not Important</option>
            <option value="4">Quadrant 4 - Not Urgent & Not Important</option>
        </select>
    </div>
    <div class="col-md-6">
        <label for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
    </div>
    <div class="col-12">
        <div class="form-check">
            <input asp-for="Completed" class="form-check-input" />
            <label class="form-check-label" for="Completed">Completed</label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save Task</button>
    </div>
</form>